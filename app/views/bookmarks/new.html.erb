<h1>Add a movie</h1>

<div class="mt-5">
  <%= simple_form_for([@list, @bookmark]) do |f| %>

    <div class="form-inputs">
      <%= f.input :comment %>
      <%= f.association :movie %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>

<div class="mt-5">
  <%= link_to "Back to my lists", lists_path %>
</div>
